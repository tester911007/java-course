<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=register_office</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">nub</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="edu.javacourse.register.domain.Person" />

    </session-factory>

</hibernate-configuration>